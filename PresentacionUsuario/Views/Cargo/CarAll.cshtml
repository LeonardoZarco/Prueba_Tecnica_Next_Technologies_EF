@model Modelo.Cargo
@{
    ViewBag.Title = "CarAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*<a href="~/Views/Cargo/CarAll.cshtml">~/Views/Cargo/CarAll.cshtml</a>*@
<h2>CarAll</h2>


@using (Html.BeginForm("CarAll", "Cargo", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="col-md-3">
            <input type="file" name="postedFile" />
        </div>

        <div class="col-md-2">
            <input type="submit" class="btn btn-info" value="Visualizar información" />
        </div>

        <div class="col-md-2 btn btn-success">
            <a href="@Url.Action("GuardarInformacion", "Cargo")">
                Guardar información
            </a>
        </div>
    </div>
}

<hr />

@if (Model.Cargos.Count > 0)
{
    <div class="row">
        <div class="col-md-12">
            <table class="table table-bordered table-responsive">
                <thead>
                    <tr>
                        <th>id</th>
                        <th>company_name</th>
                        <th>company_id</th>
                        <th>amount</th>
                        <th>status</th>
                        <th>created_at</th>
                        <th>paid_at</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Modelo.Cargo cargo in Model.Cargos.Take(10))
                    {
                        <tr>
                            <td>@cargo.Id</td>
                            <td>@cargo.company_name</td>
                            <td>@cargo.company_id</td>
                            <td>@cargo.amount</td>
                            <td>@cargo.status</td>
                            <td>@cargo.created_at</td>
                            <td>@cargo.paid_at</td>
                            @*<td>@cargo.updated_at</td>*@
                        </tr>
                    }

                </tbody>
            </table>
        </div>

    </div>
}


